<style>
    body {
        background-color: #ffe6f2; /* Rosa pastel bem claro */
        font-family: 'Poppins', sans-serif; /* Fonte Poppins */
        color: #333;
        text-align: center; /* Centraliza o conteúdo */
    }

    h1 {
        color: #d63384; /* Rosa mais escuro */
        text-shadow: 2px 2px 4px white;
    }

    .form-container {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: inline-block;
        text-align: left;
        width: 50%;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-criar {
        background: #ff66a3;
        color: white;
        padding: 12px 18px;
        font-size: 16px;
        display: inline-block;
        border-radius: 25px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-criar:hover {
            background: #ff3385;
            color: #d9d9d9; /* Cinza claro */
        }

    .btn-voltar {
        background: #ccc;
        color: white;
        padding: 10px 15px;
        border-radius: 20px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .btn-voltar:hover {
            background: #999;
        }
</style>

@model Exemplo_EF.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<h1>Criar Produto</h1>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Estoque" class="control-label"></label>
            <input asp-for="Estoque" class="form-control" />
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Criar" class="btn-criar" />
        </div>
    </form>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Index" class="btn-voltar">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
