<style>
    body {
        background-color: #ffe6f2; /* Rosa pastel bem claro */
        font-family: 'Poppins', sans-serif; /* Fonte Poppins */
        color: #333;
        text-align: center; /* Centraliza o conteúdo */
    }

    h1 {
        color: #d63384; /* Rosa mais escuro */
        text-shadow: 2px 2px 4px white;
    }

    .container {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: inline-block;
        text-align: left;
        margin-top: 20px;
    }

    .btn-salvar {
        background: #ff66a3;
        color: white;
        border-radius: 20px;
        padding: 10px 15px;
        border: none;
    }

        .btn-salvar:hover {
            background: #ff3385;
            color: #d9d9d9; /* Cinza claro */
        }

    .btn-voltar {
        background: #ff66a3;
        color: white;
        border-radius: 20px;
        padding: 10px 15px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-voltar:hover {
            background: #ff3385;
            color: #d9d9d9; /* Cinza claro */
        }
</style>

@model Exemplo_EF.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<div class="container">
    <h4>Produto</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProdutoId" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Estoque" class="control-label"></label>
            <input asp-for="Estoque" class="form-control" />
            <span asp-validation-for="Estoque" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn-salvar" />
            <a asp-action="Index" class="btn-voltar">Voltar para a lista</a>
        </div>
    </form>
</div>

<!-- Link para carregar a fonte Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
