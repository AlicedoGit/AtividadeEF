<style>
    body {
        background-color: #ffe6f2; /* Rosa pastel bem claro */
        font-family: 'Poppins', sans-serif; /* Fonte Poppins */
        color: #333;
        text-align: center; /* Centraliza o conteúdo */
    }

    h1 {
        color: #d63384; /* Rosa mais escuro */
        text-shadow: 2px 2px 4px white;
    }

    .container {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: inline-block;
        text-align: left;
        margin-top: 20px;
    }

    .btn-excluir {
        background: #ffccd9;
        color: white;
        border-radius: 20px;
        padding: 10px 15px;
        border: none;
    }

        .btn-excluir:hover {
            background: #ff99aa;
            color: #d9d9d9; /* Cinza claro */
        }

    .btn-voltar {
        background: #ff66a3;
        color: white;
        border-radius: 20px;
        padding: 10px 15px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-voltar:hover {
            background: #ff3385;
            color: #d9d9d9; /* Cinza claro */
        }
</style>

@model Exemplo_EF.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<h3>Tem certeza de que deseja excluir este item?</h3>
<div class="container">
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estoque)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Estoque)</dd>

        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Categoria)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Categoria.CategoriaId)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Excluir" class="btn-excluir" />
        <a asp-action="Index" class="btn-voltar">Voltar para a lista</a>
    </form>
</div>

<!-- Link para carregar a fonte Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
