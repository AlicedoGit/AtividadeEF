@model Exemplo_EF.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container">
    <h1 class="title">Detalhes da Categoria</h1>

    <div class="details-container">
        <h4>Informações</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Nome:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
        </dl>
    </div>

    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-edit">✏ Editar</a>
        <a asp-action="Index" class="btn btn-back">📋 Voltar para a Lista</a>
    </div>

    <div class="text-center">
        <a asp-action="Index" asp-controller="Home" class="btn btn-home">🏠 Voltar para a Home</a>
    </div>
</div>

<style>
    /* Fonte moderna */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffe6eb; /* Rosa pastel bem claro */
        color: #333;
    }

    /* Container principal */
    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
    }

    /* Título */
    .title {
        color: #d63384;
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        text-shadow: 2px 2px 4px white;
        margin-bottom: 20px;
    }

    /* Detalhes */
    .details-container {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Grupo de botões */
    .btn-group {
        text-align: center;
        margin-top: 20px;
    }

    /* Estilização dos botões */
    .btn {
        padding: 10px 20px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        border-radius: 20px; /* Botões arredondados */
        border: 2px solid white; /* Pequena borda branca */
        transition: 0.3s;
        display: inline-block;
        margin: 5px;
    }

    .btn-edit {
        background-color: #ffc107; /* Amarelo */
        color: white;
    }

        .btn-edit:hover {
            background-color: #e0a800;
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    /* Botão Home */
    .btn-home {
        background-color: #17a2b8;
        color: white;
        font-weight: bold;
    }

        .btn-home:hover {
            background-color: #138496;
        }
</style>

<!-- Fonte Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
