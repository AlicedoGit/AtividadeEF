@model Exemplo_EF.Models.Categoria

@{
    ViewData["Title"] = "Nova Categoria";
}

<div class="container">
    <h1 class="title">Criar Nova Categoria</h1>

    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control custom-input" placeholder="Digite o nome da categoria" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="btn-group">
                <input type="submit" value="Criar" class="btn btn-create" />
                <a asp-action="Index" class="btn btn-back">Voltar para a Lista</a>
            </div>
        </form>
    </div>

    <div class="text-center">
        <a asp-action="Index" asp-controller="Home" class="btn btn-home">🏠 Voltar para a Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Fonte moderna */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffe6eb; /* Rosa pastel bem claro */
        color: #333;
    }

    /* Container principal */
    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
    }

    /* Título */
    .title {
        color: #d63384;
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        text-shadow: 2px 2px 4px white;
        margin-bottom: 20px;
    }

    /* Container do formulário */
    .form-container {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Campos do formulário */
    .form-label {
        font-weight: bold;
        color: #d63384;
    }

    .custom-input {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 2px solid #d63384;
        outline: none;
        transition: 0.3s;
    }

        .custom-input:focus {
            border-color: #c2185b;
            box-shadow: 0 0 5px #c2185b;
        }

    /* Grupo de botões */
    .btn-group {
        margin-top: 20px;
        text-align: center;
    }

    /* Estilização dos botões */
    .btn {
        padding: 10px 20px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        border-radius: 20px; /* Botões arredondados */
        border: 2px solid white; /* Pequena borda branca */
        transition: 0.3s;
        display: inline-block;
        margin: 5px;
    }

    .btn-create {
        background-color: #d63384;
        color: white;
    }

        .btn-create:hover {
            background-color: #c2185b;
        }

    .btn-back {
        background-color: #6c757d; /* Cinza */
        color: white;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    /* Botão Home */
    .btn-home {
        background-color: #17a2b8;
        color: white;
        font-weight: bold;
    }

        .btn-home:hover {
            background-color: #138496;
        }
</style>

<!-- Fonte Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

