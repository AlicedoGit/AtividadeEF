@model Exemplo_EF.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="container">
    <h1 class="title">Excluir Categoria</h1>

    <h3 class="subtitle">Tem certeza de que deseja excluir esta categoria?</h3>

    <div class="delete-container">
        <h4>Detalhes da Categoria</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Nome:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
        </dl>

        <form asp-action="Delete" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="CategoriaId" />
            <div class="btn-group">
                <input type="submit" value="Excluir" class="btn btn-delete" />
                <a asp-action="Index" class="btn btn-back">Voltar para a Lista</a>
            </div>
        </form>
    </div>

    <div class="text-center">
        <a asp-action="Index" asp-controller="Home" class="btn btn-home">🏠 Voltar para a Home</a>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm("Tem certeza que deseja excluir esta categoria?");
    }
</script>

<style>
    /* Fonte moderna */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffe6eb; /* Rosa pastel bem claro */
        color: #333;
    }

    /* Container principal */
    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
    }

    /* Título */
    .title {
        color: #d63384;
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        text-shadow: 2px 2px 4px white;
        margin-bottom: 10px;
    }

    .subtitle {
        text-align: center;
        font-size: 18px;
        margin-bottom: 20px;
    }

    /* Container de exclusão */
    .delete-container {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Grupo de botões */
    .btn-group {
        text-align: center;
        margin-top: 20px;
    }

    /* Estilização dos botões */
    .btn {
        padding: 10px 20px;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        border-radius: 20px; /* Botões arredondados */
        border: 2px solid white; /* Pequena borda branca */
        transition: 0.3s;
        display: inline-block;
        margin: 5px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    /* Botão Home */
    .btn-home {
        background-color: #17a2b8;
        color: white;
        font-weight: bold;
    }

        .btn-home:hover {
            background-color: #138496;
        }
</style>

<!-- Fonte Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
