@model Exemplo_EF.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<style>
    body {
        background-color: #fdeef4;
    }

    .card {
        background: #fff0f6;
        border: none;
        width: 60%; /* Reduz a largura da caixa */
        max-width: 600px; /* Define um novo limite máximo para reduzir comprimento */
        min-height: 600px; /* Ajusta a altura para um tamanho mais equilibrado */
    }

    .form-control {
        border: 2px solid #f8cdd1;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #f48fb1;
            box-shadow: 0px 0px 10px #f8cdd1;
        }

    .btn-primary, .btn-outline-secondary {
        background-color: #f8a1b1;
        border: none;
        transition: background 0.3s;
        color: white;
    }

        .btn-primary:hover, .btn-outline-secondary:hover {
            background-color: #b0b0b0;
        }

    .text-title {
        color: #e91e63; /* Rosa mais forte */
    }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-title mb-4">Editar Cliente</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-10">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="ClienteID" />

                    <div class="mb-3">
                        <label asp-for="ClienteName" class="form-label fw-bold"></label>
                        <input asp-for="ClienteName" class="form-control" />
                        <span asp-validation-for="ClienteName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nascimento" class="form-label fw-bold"></label>
                        <input asp-for="Nascimento" class="form-control" type="date" />
                        <span asp-validation-for="Nascimento" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}