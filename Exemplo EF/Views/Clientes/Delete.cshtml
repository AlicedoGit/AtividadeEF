@model Exemplo_EF.Models.Cliente

@{
    ViewData["Title"] = "Excluir";
}

<div class="container">
    <div class="delete-container">
        <h1 class="text-strong-pink text-center">Excluir Cliente</h1>

        <h3 class="text-strong-pink text-center">Tem certeza que deseja excluir este cliente?</h3>

        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="text-center">Detalhes do Cliente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 font-weight-bold text-right">
                        @Html.DisplayNameFor(model => model.ClienteName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ClienteName)
                    </dd>
                    <dt class="col-sm-4 font-weight-bold text-right">
                        @Html.DisplayNameFor(model => model.Nascimento)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nascimento)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center">
                    <input type="hidden" asp-for="ClienteID" />
                    <button type="submit" class="btn btn-danger btn-custom">Excluir</button>
                    <a asp-action="Index" class="btn btn-secondary btn-custom">Cancelar</a>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-custom">Voltar para Lista Anterior</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
    }

    .delete-container {
        background-color: #ffb6c1; /* Rosa pastel */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .text-strong-pink {
        color: #d63384; /* Rosa mais forte */
        font-weight: bold;
    }

    .card {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
    }

    .btn-custom {
        background-color: #d63384; /* Rosa mais forte */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background-color: #c2185b; /* Tom um pouco mais escuro para hover */
            color: white;
        }

    .btn-danger {
        background-color: #ff4d4d; /* Vermelho mais suave */
    }

        .btn-danger:hover {
            background-color: #cc0000;
        }

    .btn-outline-secondary {
        border: 2px solid #ffffff;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
</style>
